generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  Int                  @id @default(autoincrement())
  username            String               @unique
  email               String               @unique
  password            String
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  posts               Post[]
  passwordResetTokens PasswordResetToken[]
}

model PasswordResetToken {
  id        Int       @id @default(autoincrement())
  tokenHash String
  userId    Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([tokenHash])
}

model Post {
  id          Int        @id @default(autoincrement())
  title       String
  slug        String     @unique
  content     String?
  published   Boolean    @default(false)
  hits        Int        @default(0)
  oldPost     Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  authorId    Int
  author      User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  thumbnailId Int?
  thumbnail   Media?     @relation(fields: [thumbnailId], references: [id], onDelete: SetNull)
  categories  Category[]

  @@index([slug])
}

model Category {
  id          Int        @id @default(autoincrement())
  name        String
  slug        String
  description String?
  parentId    Int?
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    Category[] @relation("CategoryHierarchy")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  posts       Post[]

  @@unique([slug, parentId])
  @@index([slug])
  @@index([parentId])
}

model Department {
  id               Int                       @id @default(autoincrement())
  name             String                    @unique
  slug             String                    @unique
  shortDescription String
  iconId           Int?
  icon             Media?                    @relation(fields: [iconId], references: [id], onDelete: SetNull)
  stats            DepartmentStat[]
  trainingGroups   DepartmentTrainingGroup[]
  locations        DepartmentLocation[]
  trainers         DepartmentTrainer[]
  createdAt        DateTime                  @default(now())
  updatedAt        DateTime                  @updatedAt

  @@index([slug])
}

model DepartmentStat {
  id           Int        @id @default(autoincrement())
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  label        String
  value        String
  sort         Int        @default(0)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([departmentId])
}

model DepartmentTrainingGroup {
  id           Int                         @id @default(autoincrement())
  departmentId Int
  department   Department                  @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  name         String
  ageRange     String?
  icon         String
  variant      String
  sort         Int                         @default(0)
  sessions     DepartmentTrainingSession[]
  createdAt    DateTime                    @default(now())
  updatedAt    DateTime                    @updatedAt

  @@index([departmentId])
}

model DepartmentTrainingSession {
  id              Int                     @id @default(autoincrement())
  trainingGroupId Int
  trainingGroup   DepartmentTrainingGroup @relation(fields: [trainingGroupId], references: [id], onDelete: Cascade)
  locationId      Int?
  location        DepartmentLocation?     @relation(fields: [locationId], references: [id], onDelete: SetNull)
  day             String
  time            String
  sort            Int                     @default(0)
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt

  @@index([trainingGroupId])
  @@index([locationId])
}

model DepartmentLocation {
  id           Int        @id @default(autoincrement())
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  name         String
  badge        String
  badgeVariant String
  street       String
  city         String
  mapsUrl      String?
  amenities    Json
  imageId      Int?
  image        Media?     @relation(fields: [imageId], references: [id], onDelete: SetNull)
  sort         Int        @default(0)
  trainingSessions DepartmentTrainingSession[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([departmentId])
}

model DepartmentTrainer {
  id              Int           @id @default(autoincrement())
  departmentId    Int
  department      Department    @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  contactPersonId Int
  contactPerson   ContactPerson @relation(fields: [contactPersonId], references: [id], onDelete: Cascade)
  role            String
  licenses        Json
  sort            Int           @default(0)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([departmentId, contactPersonId])
  @@index([departmentId])
  @@index([contactPersonId])
}

model ClubSettings {
  id           Int      @id @default(1)
  address      String?
  memberCount  Int?
  contactEmail String?
  contactPhone String?
  updatedAt    DateTime @updatedAt
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime
  isFullDay   Boolean  @default(false)
  location    String?
  recurrence  String?
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([startDate])
  @@index([endDate])
  @@index([category])
}

model ContactPerson {
  id                 Int                 @id @default(autoincrement())
  firstName          String
  lastName           String
  type               String
  email              String
  address            String?
  phone              String
  profileImageId     Int?
  profileImage       Media?              @relation(fields: [profileImageId], references: [id], onDelete: SetNull)
  departmentTrainers DepartmentTrainer[]
  boardMembers       BoardMember[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

model Media {
  id              Int                @id @default(autoincrement())
  filename        String             @unique
  originalName    String
  path            String
  mimetype        String
  size            Int
  type            String             @default("IMAGE")
  thumbnails      Json?
  folderId        Int?
  folder          MediaFolder?       @relation(fields: [folderId], references: [id], onDelete: SetNull)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  departments     Department[]
  posts           Post[]
  contactPersons  ContactPerson[]
  locations       DepartmentLocation[]
  homepageContent HomepageContent[]

  @@index([type])
  @@index([createdAt])
  @@index([folderId])
}

model MediaFolder {
  id        Int           @id @default(autoincrement())
  name      String
  parentId  Int?
  parent    MediaFolder?  @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children  MediaFolder[] @relation("FolderHierarchy")
  media     Media[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([parentId])
}

model HistoryContent {
  id                         Int      @id @default(1)
  // Hero Section
  heroHeadline               String
  heroSubHeadline            String
  // Founding Section
  foundingHeadline           String
  foundingDescription        String
  foundingFactCardHeadline   String
  foundingDate               DateTime?
  foundingFacts              HistoryFact[]
  foundingMilestonesHeadline String
  foundingMilestones         HistoryMilestone[]
  // Development Section
  developmentHeadline        String
  developmentDescription     String
  developmentChartLabels     HistoryChartLabel[]
  developmentChartData       HistoryChartDataset[]
  developmentChronicleGroups HistoryChronicleGroup[]
  // Festivals Section
  festivalsHeadline          String
  festivalsDescription       String
  festivalsItems             HistoryFestivalItem[]
  // Achievements Section
  achievementsHeadline       String
  achievementsItems          HistoryAchievement[]
  // CTA Section
  ctaHeadline                String
  ctaDescription             String

  updatedAt DateTime @updatedAt
}

model HistoryFact {
  id               Int            @id @default(autoincrement())
  historyContentId Int
  historyContent   HistoryContent @relation(fields: [historyContentId], references: [id], onDelete: Cascade)
  year             String
  headline         String
  description      String
  sort             Int            @default(0)

  @@index([historyContentId])
}

model HistoryMilestone {
  id               Int            @id @default(autoincrement())
  historyContentId Int
  historyContent   HistoryContent @relation(fields: [historyContentId], references: [id], onDelete: Cascade)
  year             String
  headline         String
  description      String
  sort             Int            @default(0)

  @@index([historyContentId])
}

model HomepageContent {
  id                    Int            @id @default(1)
  heroHeadline          String
  heroDescription       String
  heroTag               String
  heroLogoId            Int?
  heroLogo              Media?         @relation(fields: [heroLogoId], references: [id], onDelete: SetNull)
  stats                 HomepageStat[]
  departmentsHeadline   String
  departmentsDescription String
  departmentsSubtitle   String
  postsHeadline         String
  postsDescription      String
  postsSubtitle         String
  postsCount            Int            @default(5)
  ctaHeadline           String
  ctaDescription        String
  updatedAt             DateTime       @updatedAt
}

model HomepageStat {
  id              Int             @id @default(autoincrement())
  homepageContentId Int
  homepageContent  HomepageContent @relation(fields: [homepageContentId], references: [id], onDelete: Cascade)
  label           String
  value           String
  sort            Int             @default(0)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([homepageContentId])
}


model HistoryChartLabel {
  id               Int            @id @default(autoincrement())
  historyContentId Int
  historyContent   HistoryContent @relation(fields: [historyContentId], references: [id], onDelete: Cascade)
  label            String
  sort             Int            @default(0)

  @@index([historyContentId])
}

model HistoryChartDataset {
  id               Int            @id @default(autoincrement())
  historyContentId Int
  historyContent   HistoryContent @relation(fields: [historyContentId], references: [id], onDelete: Cascade)
  label            String
  sort             Int            @default(0)
  values           HistoryChartValue[]

  @@index([historyContentId])
}

model HistoryChartValue {
  id        Int                 @id @default(autoincrement())
  datasetId Int
  dataset   HistoryChartDataset @relation(fields: [datasetId], references: [id], onDelete: Cascade)
  value     Float
  sort      Int                 @default(0)

  @@index([datasetId])
}

model HistoryChronicleGroup {
  id               Int            @id @default(autoincrement())
  historyContentId Int
  historyContent   HistoryContent @relation(fields: [historyContentId], references: [id], onDelete: Cascade)
  headline         String
  sort             Int            @default(0)
  entries          HistoryChronicleEntry[]

  @@index([historyContentId])
}

model HistoryChronicleEntry {
  id          Int                   @id @default(autoincrement())
  groupId     Int
  group       HistoryChronicleGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  year        String
  description String
  sort        Int                   @default(0)

  @@index([groupId])
}

model HistoryFestivalItem {
  id               Int            @id @default(autoincrement())
  historyContentId Int
  historyContent   HistoryContent @relation(fields: [historyContentId], references: [id], onDelete: Cascade)
  headline         String
  text             String
  sort             Int            @default(0)

  @@index([historyContentId])
}

model HistoryAchievement {
  id               Int            @id @default(autoincrement())
  historyContentId Int
  historyContent   HistoryContent @relation(fields: [historyContentId], references: [id], onDelete: Cascade)
  year             String
  headline         String
  description      String
  category         String
  sort             Int            @default(0)

  @@index([historyContentId])
}

model BoardContent {
  id                 Int           @id @default(1)
  headline           String
  description        String
  sectionHeadline    String
  sectionDescription String
  note               String
  boardMembers       BoardMember[]
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
}

model BoardMember {
  id               Int            @id @default(autoincrement())
  boardContentId   Int
  boardContent     BoardContent   @relation(fields: [boardContentId], references: [id], onDelete: Cascade)
  contactPersonId  Int
  contactPerson    ContactPerson  @relation(fields: [contactPersonId], references: [id], onDelete: Cascade)
  sort             Int            @default(0)

  @@index([boardContentId])
  @@index([contactPersonId])
}

model StatutesContent {
  id        Int      @id @default(1)
  content   String   @db.Text
  updatedAt DateTime @updatedAt
}

model MembershipFeeContent {
  id        Int      @id @default(1)
  content   String   @db.Text
  updatedAt DateTime @updatedAt
}

model SportInsuranceContent {
  id        Int      @id @default(1)
  content   String   @db.Text
  updatedAt DateTime @updatedAt
}
