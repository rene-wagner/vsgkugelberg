# ===============================
# Postgres Database Configuration
# ===============================
POSTGRES_HOST=localhost
POSTGRES_USER=user
POSTGRES_PASSWORD=secret
POSTGRES_DB=database
POSTGRES_PORT=5432


# ===============================
# Redis Configuration
# ===============================
REDIS_URL="redis://localhost:6379"


# ===============================
# Node Configuration
# ===============================
NODE_ENV="development"


# ===============================
# `api` Configuration
# ===============================

# Database Configuration

# PostgreSQL Connection String
DATABASE_URL="postgresql://user:secret@localhost:5432/database?schema=public"

# JWT Configuration

# JWT Secret Key
JWT_SECRET="your-super-secret-key-change-in-production"

# JWT Token Expiration Time
JWT_EXPIRATION="24h"

# CORS Configuration

# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:5173"

# Media Upload Configuration

# Directory for uploaded files
# UPLOAD_DIR="./uploads"

# Maximum file size in bytes
# MAX_FILE_SIZE=10485760

# Thumbnail Generation Configuration
THUMBNAIL_QUALITY=80

# Password Reset Configuration

# Token expiration in minutes
# PASSWORD_RESET_EXPIRY_MINUTES=60

# Base URL for password reset links
APP_URL="http://localhost:5173"


# ===============================
# MailHog Configuration
# ===============================

# MAILHOG_SMTP_PORT=1025
# MAILHOG_UI_PORT=8025
# MAILHOG_API_URL="http://localhost:8025"


# ===============================
# Email Configuration
# ===============================

# Email provider: 'console' or 'smtp'
EMAIL_PROVIDER="console"

# SMTP Configuration
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="user"
SMTP_PASS="secret"
SMTP_FROM="noreply@example.com"

# When using Mailhog
# EMAIL_PROVIDER="smtp"
# SMTP_HOST="localhost"
# SMTP_PORT=1025
# SMTP_USER=""
# SMTP_PASS=""
# SMTP_FROM="noreply@example.com"


# ===============================
# Honeypot Configuration
# ===============================

# Secret key for encrypting honeypot timestamps (change in production!)
HONEYPOT_SECRET="your-honeypot-secret-key-change-in-production"

# Minimum time in seconds required to submit form (default: 3)
# CONTACT_FORM_MIN_TIME=3

# Maximum form validity in seconds (default: 3600 = 1 hour)
# CONTACT_FORM_MAX_TIME=3600

# Maximum contact form submissions per hour per IP (default: 5)
# CONTACT_FORM_RATE_LIMIT=5


# ===============================
# `web` Configuration
# ===============================

# Base URL for the API
VITE_API_BASE_URL=http://localhost:3000


